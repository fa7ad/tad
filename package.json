{
  "name": "tad",
  "version": "0.14.0",
  "description": "Lerna monorepo for Tabular data viewer libraries and apps",
  "private": true,
  "overrides": {
    "ws": "8.18.1"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^22.0.0",
    "jest": "^29.7.0",
    "lerna": "^8.2.3",
    "rimraf": "^5.0.5",
    "run-script-os": "^1.1.6",
    "ts-jest": "^29.4.1",
    "typescript": "5.9.2"
  },
  "scripts": {
    "clean": "lerna run clean",
    "build": "lerna run build --stream",
    "build:base": "lerna run build --scope '{reltab,aggtree}'",
    "build:drivers": "lerna run build --scope 'reltab-*'",
    "build:components": "lerna run build --scope 'tadviewer'",
    "build:app": "lerna run build --scope 'tad-app'",
    "test": "lerna run test",
    "version": "lerna version"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  }
}
